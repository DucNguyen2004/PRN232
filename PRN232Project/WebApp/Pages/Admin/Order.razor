@page "/admin/orders"
@using DTOs
@inject HttpClient Http
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@* @attribute [Authorize(Roles = "admin")] *@
@layout AdminLayout
@using Blazored.Toast.Services
@inject Blazored.Toast.Services.IToastService ToastService
@using Blazored.LocalStorage;
@inject Blazored.LocalStorage.ILocalStorageService localStorage
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpClientFactory

<div class="page-wrapper">
    <h2 class="admin-section-title mb-4">Quản lý đơn hàng</h2>

    <!-- Filter Section -->
    <div class="filter-bar mb-4">
        <div class="row g-2">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Tìm theo tên khách hàng..."
                           @bind="searchTerm" />
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select" @bind="selectedStatus">
                    <option value="">Tất cả</option>
                    <option value="PENDING">Chờ xác nhận</option>
                    <option value="SHIPPING">Đang giao</option>
                    <option value="COMPLETED">Đã giao</option>
                    <option value="CANCELLED">Đã hủy</option>
                </select>
            </div>
            <div class="col-md-3">
                <div class="d-flex">
                    <select class="form-select" @bind="sortField">
                        <option value="OrderDate">Ngày đặt</option>
                        @* <option value="Customer">Khách hàng</option> *@
                        <option value="TotalPrice">Tổng cộng</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <button class="btn @(sortDirection == "asc" ? "btn-primary" : "btn-outline-primary") w-100"
                        @onclick="ToggleSortDirection">
                    <i class="bi @(sortDirection == "asc" ? "bi-sort-up" : "bi-sort-down")"></i>
                    @(sortDirection == "asc" ? "Tăng dần" : "Giảm dần")
                </button>
            </div>
            <div class="col-md-12">
                <button class="btn btn-primary" @onclick="ApplyFilters">
                    <i class="bi bi-funnel-fill me-1"></i> Lọc
                </button>
                <button class="btn btn-outline-secondary ms-2" @onclick="ResetFilters">
                    <i class="bi bi-x-circle me-1"></i> Đặt lại
                </button>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Orders Table -->
        <div class="col-md-7">
            <div class="mb-4">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="sticky-col left">#ID</th>
                            <th>Trạng thái</th>
                            <th>Tổng cộng</th>
                            <th>Ngày đặt</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (loading)
                        {
                            <tr><td colspan="4" class="text-center">Đang tải...</td></tr>
                        }
                        else if (PagedOrders?.Items == null || PagedOrders.Items.Count() == 0)
                        {
                            <tr><td colspan="4" class="text-center">Không có dữ liệu đơn hàng nào.</td></tr>
                        }
                        else
                        {
                            @foreach (var o in PagedOrders.Items)
                            {
                                <tr class="@(selectedOrder?.Id == o.Id ? "table-active" : "")" @onclick="() => SelectOrder(o)">
                                    <td class="sticky-col left">@o.Id</td>
                                    <td>
                                        <span class="badge @GetStatusBadge(o.OrderStatus)">@GetStatusText(o.OrderStatus)</span>
                                    </td>
                                    <td>@FormatPrice(o.OrderDetails.Sum(i => (i.Price + i.ProductOptions?.Sum(po => po.DeltaPrice)) * i.Quantity) - o.DiscountPrice)</td>
                                    <td>@o.OrderDate.ToString("dd-MM-yyyy HH:mm")</td>
                                    <td>
                                        @if (o.OrderStatus == "PENDING")
                                        {
                                            <button class="btn btn-sm action-btn receive me-2"
                                                    @onclick="() => ConfirmOrder(o.Id)">
                                                Nhận đơn
                                            </button>
                                            <button class="btn btn-sm action-btn cancel"
                                                    @onclick="() => CancelOrder(o.Id)">
                                                Hủy đơn
                                            </button>
                                        }
                                        else if (o.OrderStatus == "SHIPPING")
                                        {
                                            <button class="btn btn-sm action-btn complete"
                                                    @onclick="() => MarkAsDelivered(o.Id)">
                                                Hoàn thành đơn
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (PagedOrders?.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" @onclick="@(() => GoToPage(CurrentPage - 1))">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>

                        @{
                            int startPage = Math.Max(1, CurrentPage - 2);
                            int endPage = Math.Min(startPage + 4, PagedOrders?.TotalPages ?? 1);

                            if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" @onclick="@(() => GoToPage(1))">1</a>
                                </li>
                                if (startPage > 2)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                            }

                            for (int i = startPage; i <= endPage; i++)
                            {
                                var pageNumber = i;
                                <li class="page-item @(i == CurrentPage ? "active" : "")">
                                    <a class="page-link" @onclick="@(() => GoToPage(pageNumber))">@i</a>
                                </li>
                            }

                            if (endPage < (PagedOrders?.TotalPages ?? 1))
                            {
                                if (endPage < (PagedOrders?.TotalPages ?? 1) - 1)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link" @onclick="@(() => GoToPage(PagedOrders.TotalPages))">@PagedOrders.TotalPages</a>
                                </li>
                            }
                        }

                        <li class="page-item @(CurrentPage == (PagedOrders?.TotalPages ?? 1) ? "disabled" : "")">
                            <a class="page-link" @onclick="@(() => GoToPage(CurrentPage + 1))">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>

        <!-- Info Panel -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    Order Details
                </div>
                <div class="card-body" style="max-height:600px; overflow-y:auto;">
                    @if (selectedOrder == null)
                    {
                        <p>Chọn đơn hàng để xem thông tin chi tiết.</p>
                    }
                    else
                    {
                        <h5>Order #@selectedOrder.Id</h5>
                        <p><strong>Khách hàng:</strong> @selectedOrder.User.Fullname</p>
                        <p><strong>Số điện thoại:</strong> @selectedOrder.User.Phone</p>
                        <p><strong>Địa chỉ:</strong> @selectedOrder.ShippingAddress</p>
                        <p><strong>Ghi chú:</strong> @(string.IsNullOrEmpty(selectedOrder.Message) ? "-" : selectedOrder.Message)</p>
                        <p><strong>Trạng thái:</strong> <span class="badge @GetStatusBadge(selectedOrder.OrderStatus)">@GetStatusText(selectedOrder.OrderStatus)</span></p>
                        <hr />
                        <h6>Items</h6>
                        <table class="table table-borderless mb-0">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in selectedOrder.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @* <img src="@(item.Product.Images.Any() ? item.Product.Images.First() : "images/default-img.png")"
                                                        alt="@item.Product.Name" width="50" height="50" class="me-2" style="object-fit: cover;" /> *@
                                                <div>
                                                    <div>@d.Product.Name</div>
                                                    @if (d.ProductOptions?.Any() == true)
                                                    {
                                                        <small class="text-muted">
                                                            @string.Join(", ", d.ProductOptions.Select(po => po.Name + " (" + po.Type + ")"))
                                                        </small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>@d.Quantity</td>
                                        <td class="text-end">@FormatPrice(d.Price + d.ProductOptions?.Sum(po => po.DeltaPrice))</td>
                                        <td class="text-end">@FormatPrice((d.Price + d.ProductOptions?.Sum(po => po.DeltaPrice)) * d.Quantity)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <hr />
                        <p><strong>Tạm tính:</strong> @FormatPrice(selectedOrder.OrderDetails.Sum(i => (i.Price + i.ProductOptions?.Sum(po => po.DeltaPrice)) * i.Quantity))</p>
                        <p><strong>Giảm giá:</strong> -@FormatPrice(selectedOrder.DiscountPrice)</p>
                        <p><strong>Tổng cộng:</strong> @FormatPrice(selectedOrder.OrderDetails.Sum(i => (i.Price + i.ProductOptions?.Sum(po => po.DeltaPrice)) * i.Quantity) - selectedOrder.DiscountPrice)</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private PaginationResponseDto<OrderResponseDto> PagedOrders = new();
    private OrderResponseDto? selectedOrder;

    private int CurrentPage = 1;
    private int PageSize = 10;

    private string searchTerm = "";
    private string selectedStatus = "";
    private string sortField = "OrderDate";
    private string sortDirection = "desc";

    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        var role = await localStorage.GetItemAsync<string>("userRole");
        if (role != "admin")
        {
            Navigation.NavigateTo("/");
            return;
        }

        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        loading = true;

        try
        {
            var client = HttpClientFactory.CreateClient("API");

            string odataQuery = BuildODataQuery();

            var response = await client.GetFromJsonAsync<List<OrderResponseDto>>(
                $"api/order{odataQuery}"
            );
            

            if (response != null)
            {
                var totalItems = response.Count;
                var totalPages = (int)Math.Ceiling(totalItems / (double)PageSize);

                PagedOrders = new PaginationResponseDto<OrderResponseDto>
                {
                    Items = response,
                    TotalItems = totalItems,
                    TotalPages = totalPages
                }; ;
            }
        }
        finally
        {
            loading = false;
        }
    }

    private string BuildODataQuery()
    {
        List<string> filters = new();
        string query = "?";

        // Search by customer full name
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            filters.Add($"contains(tolower(User/Fullname), '{searchTerm.ToLower()}')");
        }

        // Filter by status
        if (!string.IsNullOrWhiteSpace(selectedStatus))
        {
            filters.Add($"OrderStatus eq '{selectedStatus}'");
        }

        // Append filters
        if (filters.Any())
        {
            query += "$filter=" + string.Join(" and ", filters) + "&";
        }

        // ORDER BY
        string orderby = sortField switch
        {
            "TotalPrice" => $"TotalPrice {sortDirection}",
            "OrderDate" => $"OrderDate {sortDirection}",
            _ => $"Id {sortDirection}"
        };

        query += $"$orderby={orderby}&";

        // Pagination
        int skip = (CurrentPage - 1) * PageSize;
        query += $"$skip={skip}&$top={PageSize}";

        return query;
    }

    private async Task ApplyFilters()
    {
        CurrentPage = 1;
        await LoadOrders();
    }

    private void ResetFilters()
    {
        searchTerm = "";
        selectedStatus = "";
        sortField = "OrderDate";
        sortDirection = "desc";
        CurrentPage = 1;

        _ = LoadOrders();
    }

    private void ToggleSortDirection()
    {
        sortDirection = sortDirection == "asc" ? "desc" : "asc";
    }

    private async Task GoToPage(int page)
    {
        if (page < 1 || page > (PagedOrders?.TotalPages ?? 1)) return;

        CurrentPage = page;
        await LoadOrders();
    }

    private void SelectOrder(OrderResponseDto order)
    {
        selectedOrder = order;
    }

    private async Task ConfirmOrder(int orderId)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Bạn muốn xác nhận đơn hàng?");
        if (!confirmed) return;

        var client = HttpClientFactory.CreateClient("API");
        var res = await client.PutAsJsonAsync($"api/order/{orderId}", "SHIPPING");

        if (res.IsSuccessStatusCode)
        {
            ToastService.ShowSuccess("Đơn hàng đã được xác nhận.");
            selectedOrder = null;
            await LoadOrders();
        }
        else ToastService.ShowError("Lỗi khi xác nhận đơn hàng.");
    }

    private async Task CancelOrder(int orderId)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Bạn chắc chắn muốn hủy đơn?");
        if (!confirmed) return;

        var client = HttpClientFactory.CreateClient("API");
        var res = await client.PutAsJsonAsync($"api/order/{orderId}", "CANCELLED");

        if (res.IsSuccessStatusCode)
        {
            ToastService.ShowSuccess("Đơn hàng đã hủy.");
            selectedOrder = null;
            await LoadOrders();
        }
        else ToastService.ShowError("Không thể hủy đơn hàng.");
    }

    private async Task MarkAsDelivered(int orderId)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Xác nhận đơn đã giao?");
        if (!confirmed) return;

        var client = HttpClientFactory.CreateClient("API");
        var res = await client.PutAsJsonAsync($"api/order/{orderId}", "COMPLETED");

        if (res.IsSuccessStatusCode)
        {
            ToastService.ShowSuccess("Đơn hàng đã giao.");
            selectedOrder = null;
            await LoadOrders();
        }
        else ToastService.ShowError("Không thể cập nhật trạng thái đơn hàng.");
    }

    private string GetStatusBadge(string status) => status switch
    {
        "COMPLETED" => "bg-success",
        "PENDING" => "bg-primary",
        "SHIPPING" => "bg-info",
        "CANCELLED" => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetStatusText(string status) => status switch
    {
        "COMPLETED" => "Đã giao",
        "PENDING" => "Chờ xác nhận",
        "SHIPPING" => "Đang giao",
        "CANCELLED" => "Đã hủy",
        _ => "Không rõ"
    };

    private string FormatPrice(int? price)
    {
        var culture = new CultureInfo("vi-VN");
        return price?.ToString("#,0", culture) + "đ";
    }
}


