@page "/order-history"
@using DTOs
@using System.Globalization
@using WebApp.Components.OrderHistory
@inject NavigationManager Navigation
@inject HttpClient Http
@inject IHttpClientFactory HttpClientFactory

<PageTitle>Lịch sử đơn hàng - Việt Coffee</PageTitle>

<div class="container py-5">
    <h3 class="mb-4">Lịch sử đơn hàng</h3>
    
    <div class="row">
        <div class="col-lg-5 mb-4 mb-lg-0">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <button class="nav-link @(currentTab == 0 ? "active" : "")" @onclick="() => ChangeTab(0)">
                                Tất cả
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link @(currentTab == 1 ? "active" : "")" @onclick="() => ChangeTab(1)">
                                Chờ xác nhận
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link @(currentTab == 2 ? "active" : "")" @onclick="() => ChangeTab(2)">
                                Đã giao
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link @(currentTab == 3 ? "active" : "")" @onclick="() => ChangeTab(3)">
                                Đã hủy
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var order in FilteredOrders)
                        {
                            <button class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(selectedOrderId == order.Id ? "active" : "")"
                                    @onclick="() => SelectOrder(order.Id)">
                                <div>
                                    <div class="fw-bold">Đơn hàng #@order.Id</div>
                                    <div class="small">@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                                <div class="text-end">
                                    @* <div class="fw-bold">@FormatPrice(order.TotalAmount)</div> *@
                                    <div class="fw-bold">@FormatPrice(order.OrderDetails.Sum(i => (i.Price + i.ProductOptions?.Sum(po => po.DeltaPrice)) * i.Quantity) - order.DiscountPrice)</div>
                                    <span class="badge @GetStatusBadgeClass(order.OrderStatus)">
                                        @GetStatusText(order.OrderStatus)
                                    </span>
                                </div>
                            </button>
                        }
                        
                        @if (!FilteredOrders.Any())
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                <p class="mt-2 mb-0">Không có đơn hàng nào</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-7">
            @if (selectedOrder != null)
            {
                <OrderDetailPanel SelectedOrder="@selectedOrder" />
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-receipt" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Chọn một đơn hàng để xem chi tiết</h5>
                        <p class="text-muted">Chọn một đơn hàng từ danh sách bên trái để xem thông tin chi tiết</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private int currentTab = 0;
    private List<OrderResponseDto> orders = new();
    private int? selectedOrderId;
    private OrderResponseDto? selectedOrder;

    protected override async Task OnInitializedAsync()
    {
        await GetOrders();
    }

    private async Task GetOrders()
    {
        var client = HttpClientFactory.CreateClient("API");
        var response = await client.GetFromJsonAsync<ApiResponseDto<List<OrderResponseDto>>>("api/order/user");
        if (response is not null && response.Status == "success")
        {
            orders = response.Data ?? new List<OrderResponseDto>();
        }
    }

    private IEnumerable<OrderResponseDto> FilteredOrders => currentTab switch
    {
        1 => orders.Where(o => o.OrderStatus == "PENDING"),
        2 => orders.Where(o => o.OrderStatus == "COMPLETED"),
        3 => orders.Where(o => o.OrderStatus == "CANCELLED"),
        _ => orders
    };

    private void ChangeTab(int tabIndex)
    {
        currentTab = tabIndex;

        // If the selected order is not in the current filter, deselect it
        // if (selectedOrderId.HasValue && !FilteredOrders.Any(o => o.Id == selectedOrderId))
        // {
        //     selectedOrderId = null;
        //     selectedOrder = null;
        // }
    }

    private void SelectOrder(int orderId)
    {
        selectedOrderId = orderId;
        selectedOrder = orders.FirstOrDefault(o => o.Id == orderId);
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "COMPLETED" => "bg-success",
            "PENDING" => "bg-primary",
            "SHIPPING" => "bg-info",
            "CANCELLED" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetStatusText(string status)
    {
        return status switch
        {
            "COMPLETED" => "Đã giao",
            "PENDING" => "Chờ xác nhận",
            "SHIPPING" => "Đang giao",
            "CANCELLED" => "Đã hủy",
            _ => "Không xác định"
        };
    }

    private string FormatPrice(int? price)
    {
        var culture = new CultureInfo("vi-VN");
        return price?.ToString("#,0", culture.NumberFormat) + "đ";
    }
}