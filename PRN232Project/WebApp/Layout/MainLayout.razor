@using Blazored.LocalStorage
@using Blazored.Toast
@using Blazored.Toast.Configuration
@using System.Security.Claims
@using WebApp.Services
@using Microsoft.AspNetCore.Components.Authorization
@implements IDisposable

@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject AuthService AuthService
@inject ILocalStorageService LocalStorage
@inject IJSRuntime JSRuntime
@inject ApiAuthenticationStateProvider AuthStateProvider

<div class="page">
    <main class="bg">
        <div class="top-nav d-flex align-items-center justify-content-between">
            <div class="logo">
                <a href="/" class="text-decoration-none">
                    <h3 class="mb-0 text-white"><span class="accent-text-color">Việt</span> Coffee</h3>
                </a>
            </div>

            <div class="nav-center d-none d-md-block">
                <div class="d-flex justify-content-center gap-4">
                    <NavLink href="/" class="nav-link text-white" Match="NavLinkMatch.All">Trang chủ</NavLink>
                    <NavLink href="/menu" class="nav-link text-white">Thực đơn</NavLink>
                </div>
            </div>

            <div class="auth-buttons d-flex align-items-center gap-2">
                <AuthorizeView>
    <Authorized>
        @if (isAdmin)
        {
            <a href="/admin" class="btn btn-outline-light btn-sm rounded-circle d-flex align-items-center justify-content-center"
               style="width: 36px; height: 36px;" title="Quản trị">
                <i class="bi bi-gear-fill"></i>
            </a>
        }
    </Authorized>
</AuthorizeView>
                <a href="/profile" class="btn btn-outline-light btn-sm rounded-circle d-flex align-items-center justify-content-center"
                   style="width: 36px; height: 36px;" title="Trang cá nhân">
                    <i class="bi bi-person-circle"></i>
                </a>
                <a href="/cart" class="btn btn-outline-light btn-sm position-relative" title="Giỏ hàng">
                    <i class="bi bi-cart"></i>
                    @if (cartItemCount > 0)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @cartItemCount
                        </span>
                    }
                </a>
                <AuthorizeView>
                    <Authorized>
                        <button class="btn btn-outline-light btn-sm" @onclick="HandleLogout" title="Đăng xuất">
                            <i class="bi bi-box-arrow-right"></i>
                        </button>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="btn btn-outline-light btn-sm" title="Đăng nhập">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                        </a>
                        <a href="/signup" class="btn btn-outline-dark btn-sm text-white" title="Đăng ký">
                            Đăng ký
                        </a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <div class="content">
            @Body
        </div>

    </main>
</div>

<BlazoredToasts Position="ToastPosition.BottomRight"
                Timeout="3"
                ShowProgressBar="true"
                PauseProgressOnHover="true" />

@code {

    private int cartItemCount = 0;
    private DotNetObjectReference<MainLayout> objRef;
    private bool isAdmin = false;

    protected override async Task OnInitializedAsync()
    {
        var state = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = state.User;

        isAdmin = user.Claims.Any(c => c.Type == "role" && c.Value.Equals("admin"));

        objRef = DotNetObjectReference.Create(this);
        await base.OnInitializedAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initAOS");
        }
    }

    private async Task HandleLogout()
    {
        await LocalStorage.ClearAsync();
        await AuthService.Logout();
        Navigation.NavigateTo("/login", forceLoad: true);
    }

    public void Dispose()
    {
        objRef?.Dispose();
    }
}